{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": "./",
		"declaration": true,
		"lib": [
			"es2018",
		],
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist",
		"strict": true,
		"paths": {
			"*": [
				"./typing/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./typing"
		],
		"types": [
			"node"
		]
	},
	"include": [
		"./src",
		"./test"
	]
}
